<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/ https://raw.githubusercontent.com/Meorawr/wow-ui-schema/main/UI.xsd">

    <Frame name="TabardyDesigner" inherits="PortraitFrameTemplate" mixin="TabardyDesignerMixin"
        parent="UIParent" movable="true" enableMouse="true" dontSavePosition="true" hidden="true">
        <Size x="1618" y="883"/>
        <Anchors>
			<Anchor point="TOP" x="0" y="-41"/>
		</Anchors>
        <Frames>
            <Frame parentKey="CharacterModel">
                <Size x="658" y="882"/>
                <Anchors>
                    <Anchor point="TOPLEFT" />
                </Anchors>
                <Layers>
					<Layer level="BACKGROUND">
						<Texture parentKey="Background" atlas="transmog-locationbg" useAtlasSize="true">
							<Anchors>
								<Anchor point="TOPLEFT"/>
                                <Anchor point="BOTTOMLEFT"/>
							</Anchors>
						</Texture>
					</Layer>
				</Layers>
                <Frames>
                    <TabardModel parentKey="Model" inherits="ModelWithControlsTemplate">
                        <Scripts>
                            <OnMouseWheel function="nop" />
                        </Scripts>
                    </TabardModel>
                </Frames>
            </Frame>

            <Frame parentKey="MoneyFrame">
                <Size x="152" y="24"/>
                <Anchors>
                    <Anchor point="BOTTOMLEFT" x="4" y="8" />
                </Anchors>
                <Layers>
                    <Layer level="BACKGROUND">
                        <Texture parentKey="Background" atlas="common-currencybox-a" setAllPoints="true"/>
                    </Layer>
                </Layers>
                <Frames>
                    <Frame parentKey="Money" inherits="SmallMoneyFrameTemplate">
                        <Size x="141" y="15"/>
                        <Anchors>
                            <Anchor point="BOTTOMRIGHT" x="9" y="6" />
                        </Anchors>
                    </Frame>
                </Frames>
            </Frame>
            
            <Frame parentKey="CostFrame" inherits="SmallMoneyFrameTemplate">
                <Anchors>
                    <Anchor point="BOTTOMRIGHT" y="8" />
                </Anchors>
                <Layers>
                    <Layer level="BACKGROUND">
                        <FontString parentKey="Label" inherits="GameFontWhite"
                            text="TABARDVENDORCOST">
                            <Anchors>
                                <Anchor point="RIGHT" relativePoint="LEFT" x="-5" y="1" />
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
                <Scripts>
                    <OnLoad>
                        SmallMoneyFrame_OnLoad(self);
                        self.small = 0;
                        MoneyFrame_SetType(self, "STATIC");
                    </OnLoad>
                </Scripts>
            </Frame>
    
            <Button parentKey="AcceptButton" inherits="UIPanelButtonTemplate" text="ACCEPT">
                <Size x="125" y="30" />
                <Anchors>
                    <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOM" x="-5" y="3" />
                </Anchors>
                <Scripts>
                    <OnClick>
                        CallMethodOnNearestAncestor(self, "SaveTabard");
                    </OnClick>
                </Scripts>
            </Button>
            <Button parentKey="CancelButton" inherits="UIPanelButtonTemplate" text="CANCEL">
                <Size x="125" y="30" />
                <Anchors>
                    <Anchor point="BOTTOMLEFT" relativePoint="BOTTOM" x="5" y="3" />
                </Anchors>
                <Scripts>
                    <OnClick function="HideParentPanel" />
                </Scripts>
            </Button>
        </Frames>
        <Layers>
            <Layer level="ARTWORK">
                <FontString parentKey="GreetingText" font="GameFontWhite"
                    text="TABARDVENDORGREETING">
                    <Anchors>
                        <Anchor point="TOP" y="-28" />
                    </Anchors>
                </FontString>
                <Texture parentKey="DebugUpper">
                    <Size x="100" y="100" />
                    <Anchors>
                        <Anchor point="TOPRIGHT" relativePoint="TOPLEFT" />
                    </Anchors>
                </Texture>
                <Texture parentKey="DebugLower">
                    <Size x="100" y="100" />
                    <Anchors>
                        <Anchor point="TOPRIGHT" relativeKey="$parent.DebugUpper"
                            relativePoint="BOTTOMRIGHT" />
                    </Anchors>
                </Texture>
            </Layer>
        </Layers>
        <Scripts>
            <OnLoad method="OnLoad" />
            <OnEvent method="OnEvent" />
            <OnShow method="OnShow" />
            <OnHide method="OnHide" />
            <OnMouseDown method="OnMouseDown" />
            <OnMouseUp method="OnMouseUp" />
        </Scripts>
    </Frame>

</Ui>